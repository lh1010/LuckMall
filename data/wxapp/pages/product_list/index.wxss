page {
  background: #f5f5f5;
}
.search {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9;
  background-color: #fff;
  height: 70rpx;
}
.search .container {
  position: relative;
}
.search input {
  height: 66rpx;
  border-radius: 30rpx;
  padding-left: 72rpx;
  background-color: #eee;
  color: #666;
}
.search .icon_search::before {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 8rpx;
  left: 30rpx;
  content: '\e606';
  color: #666;
}
.products_nav {
  width: 100%;
  background-color: #fff;
  position: fixed;
  top: 70rpx;
  display: flex;
  border-bottom: 1px solid #eee;
  z-index: 9;
  opacity: 0.9;
}
.products_nav .item {
  flex: 1;
  position: relative;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  color: #333;
}
.products_nav .item .icon_synthesize::before {
  content: '\e62e';
  color: #999;
  font-size: 80%;
}
.products_nav .item .icon_cut::before {
  content: '\e7f8';
  color: #999;
}
.products_nav .item .icon_cut1::before {
  content: '\e601';
  color: #999;
}
.products_items {
  margin-top: 180rpx;
}
.products_items .item {
  margin: 16rpx 16rpx 20rpx 16rpx;
  width: 686rpx;
  height: 220rpx;
  display: flex;
  background: #fff;
  overflow: hidden;
  position: relative;
  padding: 16rpx;
}
.products_items .item .thumbnail {
  width: 220rpx;
  height: 220rpx;
  flex-shrink: 0;
}
.products_items .item .info {
  padding: 16rpx 32rpx 0 24rpx;
  width: 100%;
}
.products_items .item .info .name {
  color: #333;
  font-size: 30rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
  height: 86rpx;
  margin-bottom: 6rpx;
}
.products_items .item .info .attr {
  color: #999;
  white-space: nowrap; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.products_items .item .info .attr span {
  margin-right: 6rpx;
}
.products_items .item .info .price {
  font-size: 34rpx;
}
.products_items .item .info .price em {
  font-size: 80%;
}
