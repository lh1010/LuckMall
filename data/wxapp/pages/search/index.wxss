.search {
  margin-top: 20rpx;
}
.search .container {
  display: flex;
}
.search .left {
  flex: 1;
  position: relative;
}
.search .left input {
  width: 500rpx;
  border: 1rpx solid #e3e3e3;
  color: #666;
  height: 66rpx;
  border-radius: 30rpx;
  padding-left: 72rpx;
  flex: 1;
}
.search .left .icon_search::before {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  top: 10rpx;
  left: 30rpx;
  content: '\e606';
  color: #666;
}
.search .right .btn {
  color: #fff;
  background-color: #e64340;
  border-radius: 6px;
  display: block;
  width: 100rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 28rpx;
}
.hot_word {
  margin-top: 30rpx;
}
.hot_word .items {}
.hot_word .items .item {
  background-color: #eee;
  float: left;
  margin-right: 20rpx;
  font-size: 80%;
  padding: 8rpx 20rpx;
  margin-top: 20rpx;
  border-radius: 18rpx;
  color: #666;
}